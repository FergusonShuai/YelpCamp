<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class = "text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method = 'POST' novalidate class = "validated-form" enctype = "multipart/form-data">
            <div class = "mb-3">
                <label class = "form-label" for="title">Title</label>
                <input class = "form-control" type="text" name = "campground[title]" id = "name" required>
                <div class="valid-feedback">
                    Title looks good!
                </div>
            </div >
            <div class = "mb-3">
                <label class = "form-label" for="location">Location</label>
                <input class = "form-control" type="text" name = "campground[location]" id = "location" required>
                <div class="valid-feedback">
                    Location looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class = "form-label" for="price">Price Per Night</label>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id = "price" aria-label="Amount (to the nearest dollar)" name = "campground[price]" required>
                    <span class="input-group-text">.00</span>
                    <div class="valid-feedback">
                        Price seems reasonable!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class = "form-label" for="images">Upload Images</label>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" name = "images" id = "images" multiple>
                    <!-- <label class="input-group-text" for="images">Upload</label> -->
                </div>
            </div>
            
            <div class = "mb-3">
                <label class = "form-label" for="description">Description</label>
                <textarea class = "form-control" type="text" name = "campground[description]" id = "description" required></textarea>
            </div>
            <div class="mb-3">
                <button class = "btn btn-secondary">Submit</button>
            </div>
            
        </form>
        <a class = "btn btn-warning" href="/campgrounds">Cancel</a>
    </div>
</div>